<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".message.ContentActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/content_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:theme="?attr/actionBarTheme" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:id="@+id/category_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="공지 > 장학"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/info_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/category_view"
            android:layout_marginBottom="8dp"
            android:text="장학팀 02-0505-9898"/>

        <TextView
            android:id="@+id/title_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/info_view"
            android:textSize="24sp"
            android:layout_marginBottom="8dp"
            android:text="[장학]아산장학재단 장학금 신청 안내"/>

        <TextView
            android:id="@+id/content_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_view"
            android:text="아산장학재단 장학금 신청 안내 아산장학재단 장학금 신청이 마감됩니다." />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@drawable/title"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:text="@string/related"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/recommend1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:background="@drawable/list_item"
            android:gravity="center_vertical"
            android:paddingLeft="24dp"
            android:text="[장학]1차 국가장학금 신청" />

        <TextView
            android:id="@+id/recommend2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:background="@drawable/list_item"
            android:gravity="center_vertical"
            android:paddingLeft="24dp"
            android:text="[장학]아산장학재단 장학금 신청 안내 (10/12~10)" />
    </LinearLayout>

</LinearLayout>